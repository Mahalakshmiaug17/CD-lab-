%{
#include <stdio.h>
#include <stdlib.h>
int valid = 1;   /* flag for validity */
%}
%%
[0-9]+              { /* number */ }
[a-zA-Z_][a-zA-Z0-9_]* { /* identifier */ }
[+\-*/]             { /* operators */ }
[ \t\n]             { /* skip spaces */ }
\(                  { /* left paren */ }
\)                  { /* right paren */ }
.                   { valid = 0; }
%%
int main() {
    printf("Enter an arithmetic expression:\n");
    yylex();
    if (valid)
        printf("Valid Expression\n");
    else
        printf("Invalid Expression\n");
    return 0;
}
